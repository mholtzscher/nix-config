#!/usr/bin/env bash
# omarchy-launch-webapp - Launch web URLs as standalone applications
# Usage: omarchy-launch-webapp <url> [browser-name]

set -euo pipefail

URL="${1:-}"
BROWSER="${2:-firefox}"

if [[ -z "$URL" ]]; then
    echo "Error: No URL provided"
    echo "Usage: omarchy-launch-webapp <url> [browser]"
    exit 1
fi

# Launch based on available browser
case "$BROWSER" in
    firefox)
        if command -v firefox &> /dev/null; then
            exec firefox --new-window --kiosk "$URL"
        fi
        ;;
    chromium)
        if command -v chromium &> /dev/null; then
            exec chromium --app="$URL"
        fi
        ;;
    google-chrome)
        if command -v google-chrome-stable &> /dev/null; then
            exec google-chrome-stable --app="$URL"
        fi
        ;;
    brave)
        if command -v brave &> /dev/null; then
            exec brave --app="$URL"
        fi
        ;;
    *)
        echo "Error: Unknown browser '$BROWSER'"
        exit 1
        ;;
esac

# Fallback: Try any available browser
if command -v firefox &> /dev/null; then
    exec firefox --new-window "$URL"
elif command -v chromium &> /dev/null; then
    exec chromium --app="$URL"
elif command -v xdg-open &> /dev/null; then
    exec xdg-open "$URL"
else
    echo "Error: No suitable browser found"
    exit 1
fi
